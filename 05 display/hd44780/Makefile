CC=g++
INC1 = 
INC2 = 
INCDIRS = -I${INC1} -I${INC2}
LIBDIR1 = 
LIBDIR2 = 
#CFLAGS=-g -Wall ${INCDIRS}	
CFLAGS=-g  ${INCDIRS}	
LDFLAGS = -lwiringPi
LDFLAGS2 = -lwiringPi -lwiringPiDev

SOURCES=hd44780.cpp
OBJECTS=$(SOURCES:.c=.o)

SOURCES1=hd44780_2.cpp
OBJECTS1=$(SOURCES1:.c=.o)

EXECUTABLE=hd44780
EXECUTABLE1=hd44780_1

all:$(EXECUTABLE) $(EXECUTABLE1) $(EXECUTABLE2)
$(EXECUTABLE):$(OBJECTS) 
	$(CC) $(CFLAGS) $(OBJECTS) $(LDFLAGS) -o $@   
$(EXECUTABLE1):$(OBJECTS1) 
	$(CC) $(CFLAGS) $(OBJECTS1) $(LDFLAGS2) -o $@   
clean:
	rm -f $(OBJECTS) $(OBJECTS1) $(EXECUTABLE) $(EXECUTABLE1)