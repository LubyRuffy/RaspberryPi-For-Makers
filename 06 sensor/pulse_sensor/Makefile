CC=gcc
GPP=g++
INC1 = 
INC2 = 
INCDIRS = -I${INC1} -I${INC2}
LIBDIR1 = 
LIBDIR2 = 
#CFLAGS=-g -Wall ${INCDIRS}	
CFLAGS=-g  ${INCDIRS}	
CFLAGS2=-std=c++11x  ${INCDIRS}	
LDFLAGS = -lwiringPi 

SOURCES=pulse.c
OBJECTS=$(SOURCES:.c=.o)

SOURCES1=pulse_2.c
OBJECTS1=$(SOURCES1:.c=.o)

SOURCES2=pulse_3.cpp
OBJECTS2=$(SOURCES2:.cpp=.o)

EXECUTABLE=pulse
EXECUTABLE1=pulse_2
EXECUTABLE2=pulse_3

all:$(EXECUTABLE) $(EXECUTABLE1)  $(EXECUTABLE2)
$(EXECUTABLE):$(OBJECTS) 
	$(CC) $(CFLAGS) $(OBJECTS) $(LDFLAGS) -o $@   
$(EXECUTABLE1):$(OBJECTS1) 
	$(CC) $(CFLAGS) $(OBJECTS1) $(LDFLAGS) -o $@   
$(EXECUTABLE2):$(OBJECTS2) 
	$(GPP) $(CFLAGS2) $(OBJECTS2) $(LDFLAGS) -o $@   
clean:
	rm -f $(OBJECTS) $(OBJECTS1) $(EXECUTABLE) $(EXECUTABLE1) $(EXECUTABLE2)