CC=gcc
INC1 = 
INC2 = 
INCDIRS = -I${INC1} -I${INC2}
LIBDIR1 = 
LIBDIR2 = 
CFLAGS=-g  ${INCDIRS}	
LDFLAGS = -lpthread
LDFLAGS2 = -lpthread -lcurl

SOURCES=echo_srv.c
OBJECTS=$(SOURCES:.c=.o)

SOURCES1=echo_client.c
OBJECTS1=$(SOURCES1:.c=.o)

SOURCES2=curl.c
OBJECTS2=$(SOURCES2:.c=.o)

SOURCES3=curl_ftp.c
OBJECTS3=$(SOURCES3:.c=.o)

SOURCES4=curl_ftp_download.c
OBJECTS4=$(SOURCES4:.c=.o)

EXECUTABLE=echo_srv
EXECUTABLE1=echo_client
EXECUTABLE2=curl
EXECUTABLE3=curl_ftp
EXECUTABLE4=curl_ftp_download

all:$(EXECUTABLE) $(EXECUTABLE1)  $(EXECUTABLE2)   $(EXECUTABLE3)   $(EXECUTABLE4)  
$(EXECUTABLE):$(OBJECTS) 
	$(CC) $(CFLAGS) $(OBJECTS) $(LDFLAGS) -o $@   
$(EXECUTABLE1):$(OBJECTS1) 
	$(CC) $(CFLAGS) $(OBJECTS1) $(LDFLAGS) -o $@   
$(EXECUTABLE2):$(OBJECTS2) 
	$(CC) $(CFLAGS) $(OBJECTS2) $(LDFLAGS2) -o $@   
$(EXECUTABLE3):$(OBJECTS3) 
	$(CC) $(CFLAGS) $(OBJECTS3) $(LDFLAGS2) -o $@   
$(EXECUTABLE4):$(OBJECTS4) 
	$(CC) $(CFLAGS) $(OBJECTS4) $(LDFLAGS2) -o $@   
clean:
	rm -f $(OBJECTS) $(OBJECTS1) $(EXECUTABLE) $(EXECUTABLE1)  $(EXECUTABLE2)   $(EXECUTABLE3)  $(EXECUTABLE4) 
